# MANOE Orchestrator Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider API Keys (BYOK - Bring Your Own Key)
# Configure at least one provider
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=  # Optional: Organization ID

# OpenRouter Configuration (access multiple models through one API)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key
OPENROUTER_SITE_URL=  # Optional: Your site URL for rankings

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# =============================================================================
# Agent Model Configuration
# Specify which provider and model each agent should use
# =============================================================================

# Architect Agent (Genesis Phase)
ARCHITECT_PROVIDER=openai  # openai, openrouter, gemini, claude
ARCHITECT_MODEL=gpt-4o

# Profiler Agent (Character Design)
PROFILER_PROVIDER=openai
PROFILER_MODEL=gpt-4o

# Strategist Agent (Plot Outlining)
STRATEGIST_PROVIDER=openai
STRATEGIST_MODEL=gpt-4o

# Writer Agent (Drafting)
WRITER_PROVIDER=openai
WRITER_MODEL=gpt-4o-mini

# Critic Agent (Feedback)
CRITIC_PROVIDER=openai
CRITIC_MODEL=gpt-4o

# =============================================================================
# Infrastructure Services
# =============================================================================

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=  # Optional: Redis password

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional: Qdrant API key

# Supabase Configuration
SUPABASE_URL=http://localhost:8000
SUPABASE_KEY=your-supabase-service-key
SUPABASE_JWT_SECRET=your-jwt-secret

# =============================================================================
# Application Settings
# =============================================================================

# Logging
LOG_LEVEL=INFO

# Generation Settings
DEFAULT_TEMPERATURE=0.7
MAX_RETRIES=3
TIMEOUT_SECONDS=120
